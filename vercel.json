{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "crons": [
    {
      "path": "/api/kasa/automations/daily",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/kasa/automations/monthly",
      "schedule": "0 2 1 * *"
    }
  ]
}

